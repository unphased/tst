{
  "name": "tst",
  "version": "0.0.1",
  "description": "A lightweight all-powerful TypeScript test library.",
  "exports": {
    ".": "./dist/bundle.js"
  },
  "scripts": {
    "typecheck": "tsc",
    "build": "babel src --out-dir build --copy-files --extensions \".ts\"",
    "bundle": "npm run build && esbuild ./build/index.js --bundle --platform=node --sourcemap --format=esm --outfile=./dist/bundle.js --external:express",
    "start": "node --enable-source-maps build/dispatch/runner.js",
    "self-test": "npm run build && npm run start"
  },
  "author": "Steven Lu",
  "license": "none (this will be updated, make an issue if you have any queries!)",
  "type": "module",
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.17.17",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "babel-plugin-module-resolver": "^5.0.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.43.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.3.4",
    "typescript": "^5.3.3",
    "ts-utils": "0.1.0"
  },
  "dependencies": {
    "type-fest": "^4.10.2"
  }
}
